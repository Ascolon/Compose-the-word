<Window x:Class="CreateWords.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreateWords"
        mc:Ignorable="d"
        Title="Составь слово" 
        Height="400" 
        Width="700" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow">
    <Grid Name="grisd">
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Name="letter">

        </Grid>
        <Label Name="input"
               
               Grid.Row="1" 
               Margin="0,10,0,10" 
               BorderBrush="Black" 
               BorderThickness="2"
               FontSize="40"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"/>
        <Button Click="CheckClick" Content="Проверить" Name="Check" Grid.Row="2" Height="40" Width="100" Margin="0,0,120,0"></Button>
        <Button Content="Удалить" Name="Del" Grid.Row="2" Height="40" Width="100" Margin="120,0,0,0"></Button>
    </Grid>
</Window>
